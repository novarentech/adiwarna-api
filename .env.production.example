# Application
APP_NAME="Adiwarna API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.adiwarna.com

# Docker
DOCKER_USERNAME=your-dockerhub-username
APP_PORT=8000

# Database
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=adiwarna-db
DB_USERNAME=root
DB_PASSWORD=your-secure-password
DB_ROOT_PASSWORD=your-root-password
DB_EXTERNAL_PORT=3307

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# CORS
CORS_ALLOWED_ORIGINS=https://app.adiwarna.com,https://admin.adiwarna.com

# Mail (optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@adiwarna.com"
MAIL_FROM_NAME="${APP_NAME}"
